{
  "manifest_version": 3,
  "name": "Fast Reader",
  "version": "1.0.0",
  "description": "Read text faster with RSVP (Rapid Serial Visual Presentation). Features focus-point highlighting and customizable speed.",
  "permissions": [
    "activeTab",
    "contextMenus",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "background": {
    "service_worker": "background/service-worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css": [
        "content/content.css"
      ],
      "js": [
        "content/content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "options_page": "settings/settings.html",
  "commands": {
    "start-rsvp": {
      "suggested_key": {
        "default": "Alt+R",
        "mac": "Alt+R"
      },
      "description": "Start RSVP reading of selected text"
    },
    "toggle-playback": {
      "suggested_key": {
        "default": "Alt+Space"
      },
      "description": "Toggle play/pause"
    }
  }
}